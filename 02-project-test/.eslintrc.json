{
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "no-unused-vars": "off",
    "react/prop-types": "off",
    "arrow-body-style": "off",
    "react/function-component-definition": "off"
  },
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true
  }
}
